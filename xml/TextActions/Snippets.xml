	<action id="org.purl.net.mkhl.bash.snippets.case-block"
	  category="actions.text.bash/bash.tools.Snippets.cond">
		<title>case … in</title>
		<text-trigger>case</text-trigger>
		<class>TEAforEspresso</class>
